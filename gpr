#!/bin/bash

# Open gitlab / github, merge request / 
remoteUrl=$(git-home-url | head -n1)
branch=$(git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1/")
open "${remoteUrl}/merge_requests/new?utf8=âœ“&merge_request[source_branch]=${branch}"

